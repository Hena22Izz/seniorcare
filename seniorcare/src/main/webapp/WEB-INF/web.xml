<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
                             http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <!-- Welcome File -->
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>

    <!-- Resource Reference for Database -->
    <resource-ref>
        <description>Database Connection</description>
        <res-ref-name>jdbc/seniorcare</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>

    <!-- Servlet Mapping for AppointmentServlet -->
    <servlet>
        <servlet-name>AppointmentServlet</servlet-name>
        <!-- Update the servlet class with the full package name -->
        <servlet-class>servlet.AppointmentServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>AppointmentServlet</servlet-name>
        <url-pattern>/appointment</url-pattern> <!-- Define the URL pattern for the servlet -->
    </servlet-mapping>
</web-app>
